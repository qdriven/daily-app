erupt-app:
  waterMark: false
  verifyCodeCount: 2
  pwdTransferEncrypt: true
  locales: [ "zh-CN","zh-TW","en-US","ja-JP" ]
erupt:
  csrfInspect: true
  redisSession: false
  uploadPath: /var/tmp/upload
  keepUploadFileName: false
  upms.expireTimeByLogin: 120
  security.recordOperateLog: true

spring:
  datasource:
    url: ${DB_URL:jdbc:postgresql://db.example.com:5432/workspace}
    username: ${DB_USERNAME:postgres}
    password: ${DB_PASSWORD}
    hikari:
      maximum-pool-size: 20
      minimum-idle: 5
      connection-timeout: 30000
      idle-timeout: 600000
      max-lifetime: 1800000
  jpa:
    show-sql: false
    generate-ddl: false
    database-platform: org.hibernate.dialect.PostgreSQLDialect
    database: postgresql
    properties:
      hibernate.format_sql: true
      hibernate.use_sql_comments: true
  servlet:
    multipart:
      max-file-size: 100MB
      max-request-size: 100MB

knife4j:
  enable: true
  openapi:
    title: QA Workspace API
    description: "`QA Workspace API workspace"
    email: fluentqa@163.com
    concat: fluent-qa
    group:
      test1:
        group-name: qa workspace api
        api-rule: package

server:
  compression:
    mime-types: application/javascript,text/css,application/json,application/xml,text/html,text/xml,text/plain
    enabled: true
  error:
    includeException: false
    includeStacktrace: NEVER
    includeMessage: ALWAYS
  port: ${SERVER_PORT:9090}
  ssl:
    enabled: false
    key-store: ${SSL_KEYSTORE_PATH}
    key-store-password: ${SSL_KEYSTORE_PASSWORD}
    key-store-type: PKCS12

logging:
  level:
    root: WARN
    io.fluentqa: INFO
    org.hibernate: WARN
    io.fluent: INFO
    xyz.erupt: INFO
    org.springframework.security: INFO
  pattern:
    console: "%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"
    file: "%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"
  file:
    name: ./logs/application.log
    max-size: 100MB
    max-history: 30
    total-size-cap: 10GB

debug: false

magic-api:
  web: /fluentapi/v1
  resource.location: ./magic-script
