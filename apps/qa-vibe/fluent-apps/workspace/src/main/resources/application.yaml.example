erupt-app:
  waterMark: false
  verifyCodeCount: 2
  pwdTransferEncrypt: true
  locales: [ "zh-CN","zh-TW","en-US","ja-JP" ]
erupt:
  csrfInspect: true
  redisSession: false
  uploadPath: /tmp/upload
  keepUploadFileName: false
  upms.expireTimeByLogin: 120
  security.recordOperateLog: false

spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/workspace
    username: postgres
    password: postgres
  jpa:
    show-sql: false
    generate-ddl: true
    database-platform: org.hibernate.dialect.PostgreSQLDialect
    database: postgresql
  servlet:
    multipart:
      max-file-size: 100MB
      max-request-size: 100MB

knife4j:
  enable: true
  openapi:
    title: QA Workspace API
    description: "`QA Workspace API workspace"
    email: fluentqa@163.com
    concat: fluent-qa
    group:
      test1:
        group-name: qa workspace api
        api-rule: package

server:
  compression:
    mime-types: application/javascript,text/css,application/json,application/xml,text/html,text/xml,text/plain
    enabled: true
  error:
    includeException: false
    includeStacktrace: NEVER
    includeMessage: ALWAYS
  port: 9090

logging:
  level:
    root: WARN
    io.fluentqa: INFO
    org.hibernate: WARN
    io.fluent: INFO
    xyz.erupt: INFO
  pattern:
    console: "%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"
  file:
    name: ./logs/application.log

debug: false

magic-api:
  web: /fluentapi/v1
  resource.location: ./magic-script
